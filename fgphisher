#!/usr/bin/env bash

cd /root/camphisher-tool || { echo "Failed to enter the directory => /root/camphisher-tool"; exit 1; }

fgphisher(){
  case "$1 $2" in
    "-f --help")
      sudo bash camphisher.sh 
      ;;
    "-s --start")
      server 
      ;;
    "-d files.png")
    rm -rf /root/fgphisher/server.phisher/files
      ;;
    *)
      echo "Erro! Unknown command: $1"
      exit 1
      ;;
  esac
}

server(){
  echo "[::] Starting Fgphisher..."
bash cloud.sh
}


fgphisher "$@"
